<!DOCTYPE html>
<html>
<head>
  <title>Roa</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top" style="height: auto;">
		<div class="navbar-inner">
			<div class="container-fluid">

				<!-- Responsive -->
				<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

				<!-- ROA -->
				<a class="brand" href="#">ROA</a>

				<!-- Atajos -->
				<div class="nav-collapse collapse">

					<!-- Links (izq) -->
					<ul class="nav">
						<li><a href="#">Home</a></li>
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#"> Ayuda <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li> <%= link_to "Metodologías", methodologies_path(:option => 1) %></li>
							</ul>
						</li>
						<!-- <li><a href="#contact">Statistics</a></li> -->
			        </ul>

			        <!-- Información login (der) -->
			        <% if current_person %>
			        	<ul class="nav pull-right">
			        		<li class="dropdown">
				                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
				                  Logged in as <%= current_person.name %> 
				                  <b class="caret"></b>
				                </a>
			            		<ul class="dropdown-menu">
			            			<li>
			            				<%= link_to "Edit Profile", edit_person_path(current_person) %>
			                		</li>
			                		<li>
			                			<%= link_to "Log Out", logout_path %>
			                		</li>
			            		</ul>
			            	</li>
			            </ul>
			        <% end %>
			    </div>
			</div>
		</div>
	</div>

	<!-- Contenedor principal -->
	<div class="container-fluid">
		<div class="row-fluid">
			 <div class="span2">
			 	<!--Sidebar content-->
			 	<div class="well sidebar-nav">
			 		<ul class="nav nav-list" id="menu">
			 			<li class="nav-header">material<br></li>
						<li>
							<%= link_to "Subir material", upload_material_path %>
						</li>
						<li>
							<%= link_to "Ver todo el material", learning_objects_path(:option=>1) %>
						</li>
						<li>
							 <%= link_to "Ver por cursos", courses_path(:option=>1) %>
						</li>
						<li class="divider"></li>
						<li class="nav-header">
							Courses
						</li>
						<li>
							<%=link_to "Admin. cursos", courses_path(:option=>2) %>
						</li>
						<li>
							<a href="#">Agregar curso</a>
						</li>
						<li class="divider"></li>
						<li class="nav-header">
							Metadato
						</li>
						<li>
							<%=link_to "Admin. metadatos", metadata_schemas_path %>
						</li>
						<li class="divider"></li>
						<li  class="nav-header">
							Usuarios
						</li>
						<li>
							<a href="#">Admin. usuarios</a>
						</li>
						<!-- <li>
							<a href="#">Link</a>
						</li> -->
					</ul>
				</div>
			 </div>
			 <div class="span9">
			 	<!--Body content-->

			 	<!-- Mensajes FLASH -->
			 	<div class="row">
			      <% flash.each do |name, msg| %>
			        <div class="alert alert-block" id="flash_<%= name %>">
			          <button type="button" class="close" data-dismiss="alert">&times;</button>
			          </span> <%= msg %>
			        </div>
			      <% end %>
			    </div>
			    
			    <!-- Contenidos -->
			    <div class="row">
			      <%= yield %>
			    </div>
			 </div>
		</div>
	    
	</div>
</body>
</html>
