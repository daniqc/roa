<div class="navbar">
      <div class="navbar-inner">
        <span class="brand" href="#" style="margin-top: 10px;">Repositorio de objetos de aprendizaje (ROA) - Departamento Ingeniería Informática</span>
        <div style="text-align: right;"><%= image_tag("UDS HCOLOR_ROA.png", size: "150x60", :alt => "UdeSantiago") %></div>
      </div>
    </div>

<div class="row-fluid">
  <div class="span12">

    <!-- Mensajes -->
    <% flash.each do |name, msg| %>
      <div class="alert alert-block" id="flash_<%= name %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= msg %>
      </div>
    <% end %>

    <div class="row-fluid">
      <div class="span6 well">

        <!-- Formulario login-->
        <%= form_tag sessions_path, :class => "" do %>
          <legend>
            Acceso
          </legend>

          <!-- Username -->
          <div class="row-fluid">
            <div class="span3">
              Nombre de usuario
            </div>
            <div class="span9">
              <div class="input-prepend">
                <span class="add-on">
                  <i class="icon-user"></i>
                </span>
                <%= text_field_tag :username, params[:username], :class => "input-large" %>
              </div>
            </div>
          </div>

          <!-- Password -->
          <div class="row-fluid">
            <div class="span3">
              Contraseña
            </div>
            <div class="span9">
              <div class="input-prepend">
                <span class="add-on">
                  <i class="icon-lock"></i>
                </span>
                <%= password_field_tag :password, "", :class => "input-large" %>
              </div>
            </div>
          </div>

          <!-- Submit -->
          <div class="row-fluid">
            <div class="span3"></div>
            <div class="span9">
            	<%= submit_tag "Iniciar sesión!", :disable_with => 'Iniciando sesión...', :class => "btn btn-primary" %>
              <%#= submit_tag "Sign in!", :class => "btn btn-primary" %>
            </div>
          </div>
        <% end %>

      </div>

      <div class="span6 well">
        <!-- Soporte -->
        <legend>Soporte</legend>
        <!-- <p><%#= link_to "forgotten password?", new_password_reset_path %></p> -->
        <!-- <p><%#= link_to "Don't have an account? Sign Up!", signup_path %></p> -->
        <p><%= link_to "¿No tienes cuenta? Contacta al administrador!" %></p>
      </div>
    </div>
  </div>
</div>