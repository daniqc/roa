<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">ROA</a>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">

    <!-- Mensajes -->
    <% flash.each do |name, msg| %>
      <div class="alert alert-block" id="flash_<%= name %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= msg %>
      </div>
    <% end %>

    <div class="row-fluid">
      <div class="span6 well">

        <!-- Formulario login-->
        <%= form_tag sessions_path, :class => "" do %>
          <legend>
            Please login
          </legend>

          <!-- Username -->
          <div class="row-fluid">
            <div class="span3">
              Username
            </div>
            <div class="span9">
              <div class="input-prepend">
                <span class="add-on">
                  <i class="icon-user"></i>
                </span>
                <%= text_field_tag :username, params[:username], :class => "input-large" %>
              </div>
            </div>
          </div>

          <!-- Password -->
          <div class="row-fluid">
            <div class="span3">
              Password
            </div>
            <div class="span9">
              <div class="input-prepend">
                <span class="add-on">
                  <i class="icon-lock"></i>
                </span>
                <%= password_field_tag :password, "", :class => "input-large" %>
              </div>
            </div>
          </div>

          <!-- Submit -->
          <div class="row-fluid">
            <div class="span3"></div>
            <div class="span9">
            	<%= submit_tag "Sign in!", :disable_with => 'Signing in...', :class => "btn btn-primary" %>
              <%#= submit_tag "Sign in!", :class => "btn btn-primary" %>
            </div>
          </div>
        <% end %>

      </div>

      <div class="span6 well">
        <!-- Soporte -->
        <legend>Support</legend>
        <p><%#= link_to "forgotten password?", new_password_reset_path %></p>
        <p><%= link_to "Don't have an account? Sign Up!", signup_path %></p>
      </div>
    </div>
  </div>
</div>