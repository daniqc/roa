<%= form_for [@learning_object, @comment] do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :person_id, :value => current_person.id %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :learning_object_id, :value => @learning_object.id %>

  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span10">
        <%= f.text_area :comment, :class => "comment-text-area", placeholder: 'Agrega un nuevo comentario...', :maxlength => 500 %>
      </div>
      <div class="span2 submit-comment">
        <%= f.submit "Agregar comentario", :class=> "btn btn-small btn-success" %>
      </div>
    </div>
  </div>
<% end %>
