<div class="div-fluid">
  <div class="page-header">
      <h3>Listado de personas registradas en el sistema<small></small></h3>
  </div>
  <div class="row-fluid">
    <div style="text-align: right;">
      <% if can? :create, Person %>
        <%= link_to "Agregar nuevo usuario", signup_path, :class=> "btn btn-success"%>
      <% end %>
    </div>
  </div>
  <table class="table table-hover">
    <thead>
        <th>Nombre</th>
        <th>Username</th>
        <th>Email</th>
    </thead>
    <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.user.username %></td>
        <td><%= person.email %></td>
        <!-- <td><%#= link_to 'Ver', person %></td> -->
        <% if can? :update, Person %>
          <td><%= link_to 'Editar', edit_person_path(person) %></td>
        <% end %>
        <!-- <td><%#= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
  </table>
</div>