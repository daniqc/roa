<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="span12">
      <div class="row-fluid">
        <div class="span4">
          <div class="row-fluid">
            <div class="span3"><%= f.label :code %></div>
            <div class="span7"><%= f.text_field :code %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :hh_week %></div>
            <div class="span7"><%= f.text_field :hh_week %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :description %></div>
            <div class="span7"><%= f.text_area :description, :rows => 8 %></div>
          </div>
        </div>
        <div class="span4">
          <div class="row-fluid">
            <div class="span3"><%= f.label :name %></div>
            <div class="span7"><%= f.text_field :name %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :version %></div>
            <div class="span7"><%= f.text_field :version %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :category_id %></div>
            <div class="span7"><%= f.collection_select :category_id, Category.all, :id, :name, {} %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :career_id %></div>
            <div class="span7"><%= f.collection_select :career_id, Career.all, :id, :name, {} %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :department_id %></div>
            <div class="span7"><%= f.collection_select :department_id, Department.all, :id, :name, {} %></div>
          </div>
        </div>
        <div class="span4">
          <div class="row-fluid">
            <div class="span3"><%= f.label :tel_t, "T" %></div>
            <div class="span7"><%= f.text_field :tel_t %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :tel_e, "E" %></div>
            <div class="span7"><%= f.text_field :tel_e %></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :tel_l, "L" %></div>
            <div class="span7"><%= f.text_field :tel_l %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>