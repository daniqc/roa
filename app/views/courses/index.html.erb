<div class="div-fluid">
    <div class="page-header">
      <h2>Courses <small>List of courses created</small></h2>
    </div>
    <div class="navbar">
        <div class="navbar-inner">
            <ul class="nav">
                <li>
                    <%= link_to new_course_path do %>
                        <i class="icon-plus-sign"></i>
                        New course
                    <% end %>
                </li>
            </ul>
        </div>
    </div>
    
    <table class="table table-bordered table-hover">
      <thead>
        <th>Code</th>
        <th>Name</th>
        <th>T</th>
        <th>E</th>
        <th>L</th>
        <th>Hh week</th>
        <th>Version</th>
        <th>Category</th>
        <th>Career</th>
        <th colspan = "3">Actions</th>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
        <tr>
            <td><%= course.code %></td>
            <td><%= link_to course.name, course, :title =>"See Topics" %></td>
            <td><%= course.tel_t %></td>
            <td><%= course.tel_e %></td>
            <td><%= course.tel_l %></td>
            <td><%= course.hh_week %></td>
            <td><%= course.version %></td>
            <td><%= course.category.name %></td>
            <td><%= course.career.name %></td>
            <td>
                <%= link_to edit_course_path(course), {:class => "btn btn-mini", :title =>"Edit Course"} do %>
                    <i class="icon-edit"></i>
                <% end %>
            </td>
            <!-- <td>
                <%= link_to course_participants_path(course), {:class => "btn btn-mini", :title =>"See Participants"} do %>
                    <i class="icon-user"></i>
                <% end %>
            </td> -->
            <td>
                <%= link_to course, :class => "btn btn-mini", method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="icon-trash"></i>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <br />

    <%#div class="dialog" title="Course" id="new_course_div"></div%>
</div>