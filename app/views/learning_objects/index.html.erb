<div class="div-fluid">
  <div class="page-header">
      <h2>Listado de objetos de aprendizaje<small></small></h2>
  </div>
  
  <div class="input-append simply_search">
  <%= form_tag learning_objects_path, :method => "get" do %>
      <div style="float:left;">
        <%= select_tag(:search_by, options_for_select([['Nombre', 1], ['Autor', 2], ['CategorÃ­a', 3], ['Palabras clave', 4]], params[:search_by]), :id=>"select_search_by") %>
      </div>
      <div style="float:left; width:300px;">
        <%= text_field_tag :query, params[:query], :id => "query_text_field", :style=>"width:300px;" %>
        <%= collection_select(nil, :category_id, Course.order(:name), :id, :name, { :include_blank => true}, {:id=> "category_value", :style => "width:300px;"}) %>
        <%= submit_tag "Buscar", :name => nil, :class=> "btn"%>
      </div>
  <% end %>
  </div>
  <div id="separate_div"></div>
  <div class="container-fluid material-table">
    <% @learning_objects.each do |learning_object| %>
      <div class="row-fluid">
        <div class="span12">
          <div class="row-fluid material-row <%= cycle('anything','odd') %>">
            <div class="span9">
                <div><strong><%= link_to learning_object.name, learning_object %></strong></div>
                <div><%= MetadataSchema.find_description(learning_object) %></div>
                <br>
                <div><strong>Author:</strong> <%= MetadataSchema.find_author(learning_object)%></div>
                <div style="float: left;"><strong>Date add:</strong> <%= learning_object.created_at.strftime("%d %B %Y") %></div> 
                <div style="float: left; padding-left: 15px;"><strong>Date modified:</strong> <%= learning_object.updated_at.strftime("%d %B %Y") %></div>
            </div>
            <div class="span3">
              <div>Rating</div>
                <%= rating_average learning_object %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br />
</div>