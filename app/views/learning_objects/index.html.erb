<div class="div-fluid">
  <div class="page-header">
    <p style="color: gray;text-align: right;">Te encuentras en: <%= link_to "Home", root_url%> &raquo; Ver todo el material</p>
      <h2>Listado de objetos de aprendizaje<br><small></small></h2>
      <span></span>
  </div>
  <div class="row-fluid">
    <div class="span2 text_buscar"></div>
    <div class="span7 span_search"><%= render 'search_form'%></div>
  </div>
  
  <div id="separate_div"></div>
  <!-- <div class="row"> -->
    <!-- <div class="span6"> -->
      <p class="text-info" style="padding-left: 6px;">Para accceder a cada uno de ellos, haz clic en su título.</p>
    <!-- </div> -->
    <!-- <div class="span6">
      <%#= link_to "Fecha", :sort => "created_at" %> |
      <%#= link_to "Rating", :sort => "rating" %>
    </div> -->
  <!-- </div> -->
    <div class="container-fluid material-table">
    <% @learning_objects.each do |learning_object| %>
      <div class="row-fluid">
        <div class="span12">
          <div class="row-fluid material-row <%= cycle('anything','odd') %>">
            <div class="span9">
                <div><strong><%= link_to learning_object.name, learning_object %></strong></div>
                <div><%= MetadataSchema.find_description(learning_object) %></div>
                <br>
                <div><strong>Autor:</strong> <%= MetadataSchema.find_author(learning_object)%></div>
                <div style="float: left;"><strong>Fecha creación en repositorio:</strong> <%= learning_object.created_at.strftime("%d %B %Y") %></div> 
                <div style="float: left; padding-left: 15px;"><strong>Fecha de modificación:</strong> <%= learning_object.updated_at.strftime("%d %B %Y") %></div>
            </div>
            <div class="span3">
              <div>Rating</div>
                <%= rating_average learning_object %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= will_paginate @learning_objects %>
  <div style="text-align: center; color: darkcyan;">
    <span><%= page_entries_info @learning_objects %></span>
  </div>
  <br />
</div>