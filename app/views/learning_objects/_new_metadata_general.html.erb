<div class="row-fluid metadata-body">
	<div class="span4">
		<div class="row-fluid">
			<div class="span3">Title: </div>
			<div class="span9"><%= text_field_tag(:general_title) %></div>
		</div>
		<div class="row-fluid">
			<div class="span3">Identifier: </div>
			<div class="span9"><%= text_field_tag(:general_identifier) %></div>
		</div>
		<div class="row-fluid">
			<div class="span3">Language*: </div>
			<div class="span9"><%= select_tag(:general_languages, options_for_select(["es", "en"]),{:include_blank=>true}) %></div>
		</div>

	</div>
	<div class="span4">
		
		<div class="row-fluid">
			<div class="span3">Coverage: </div>
			<div class="span9"><%= text_field_tag(:general_coverage) %></div>
		</div>
		<div class="row-fluid">
			<div class="span3">Structure: </div>
			<div class="span9"><%= select_tag(:general_structure, options_for_select(["Atomic", "Branched", "Collection", "Hierarchical", "Linear", "Mixed", "Networked", "Parceled"]),{:include_blank=>true}) %></div>
		</div>
		<div class="row-fluid">
			<div class="span3">Aggregation level: </div>
			<div class="span9"><%= select_tag(:general_aggregation_level, options_for_select(["1", "2","3","4"]),{:include_blank=>true}) %></div>
		</div>
	</div>
	<div class="span4">
		<div class="row-fluid">
			<div class="span3">Description: </div>
			<div class="span8"><%= text_area_tag(:general_description, nil, {:id=>"input-description", maxlength:50}) %></div>
		</div>	
	</div>
	
</div>
<div class="row-fluid metadata-body">
	<div class="span11">
		<div class="row-fluid">
			<div class="span3">Keywords (separate with commas): </div>
			<div class="span9"><%= text_field_tag(:general_keywords, nil, {:id=>"input-keywords"}) %></div>
		</div>
	</div>
</div>