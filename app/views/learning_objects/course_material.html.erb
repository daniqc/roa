<div class="div-fluid">
  <div class="page-header">
    <p style="color: gray;text-align: right;">Te encuentras en: <%= link_to "Home", root_url%> &raquo; <%= link_to "Ver por cursos", courses_path(:option=>1) %> &raquo; <%= link_to @course.name, course_organization_path(:id => @course.id), :title =>"Ver organización del curso (temas)" %> &raquo; Ver todo el material asociado</p>
      <h4>Objetos de aprendizaje asociados al curso " <%= @course.name %> "</h4>
      <div><%= link_to course_organization_path(:id => @course.id),{:class => "btn btn-mini" } do %>
        <i class="icon-th-list"></i> Ver la organización del curso
        <% end %>
      </div>
  </div>
  
  <div class="container-fluid material-table">
    <% @learning_objects.each do |learning_object| %>
      <div class="row-fluid">
        <div class="span12">
          <div class="row-fluid material-row <%= cycle('anything','odd') %>">
            <div class="span9">
                <div><strong><%= link_to learning_object.name, learning_object %></strong></div>
                <div><%= MetadataSchema.find_description(learning_object) %></div>
                <br>
                <div><strong>Author:</strong> <%= MetadataSchema.find_author(learning_object)%></div>
                <div style="float: left;"><strong>Date add:</strong> <%= learning_object.created_at.strftime("%d %B %Y") %></div> 
                <div style="float: left; padding-left: 15px;"><strong>Date modified:</strong> <%= learning_object.updated_at.strftime("%d %B %Y") %></div>
            </div>
            <div class="span3">
              <div>Rating</div>
                <%= rating_average learning_object %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br />
</div>