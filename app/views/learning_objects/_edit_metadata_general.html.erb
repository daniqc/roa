<div class="row-fluid metadata-body">
	<div class="span4">
		<div class="row-fluid">
			<div class="span3">Title: </div>
			<% general_title = obtain_general_title(@learning_object,@metadata_general) %>
			<%= hidden_field_tag(:general_title_id, general_title.id)%>
			<div class="span9"><%= text_field_tag(:general_title, general_title.value) %></div>
		</div>
		<div class="row-fluid">
			<div class="span3">Identifier: </div>
			<% general_identifier = obtain_general_identifier(@learning_object,@metadata_general) %>
			<%= hidden_field_tag(:general_identifier_id, general_identifier.id)%>
			<div class="span9"><%= text_field_tag(:general_identifier, general_identifier.value) %></div>
		</div>
		<div class="row-fluid">
			<div class="span3">Language: </div>
			<% general_languages = obtain_general_languages(@learning_object,@metadata_general) %>
			<%= hidden_field_tag(:general_languages_id, general_languages.id)%>
			<div class="span9"><%#= select_tag(:general_languages, options_for_select(["es", "en"],general_languages.value),{:include_blank=>true}) %>
			<%= text_field_tag(:general_languages, general_languages.value) %></div>
		</div>

	</div>
	<div class="span4">
		
		<div class="row-fluid">
			<div class="span3">Coverage: </div>
			<% general_coverage = obtain_general_coverage(@learning_object,@metadata_general) %>
			<%= hidden_field_tag(:general_coverage_id, general_coverage.id)%>
			<div class="span9"><%= text_field_tag(:general_coverage, general_coverage.value) %></div>
		</div>
		<div class="row-fluid">
			<div class="span3">Structure: </div>
			<% general_structure = obtain_general_structure(@learning_object,@metadata_general) %>
			<%= hidden_field_tag(:general_structure_id, general_structure.id)%>
			<div class="span9"><%#= select_tag(:general_structure, options_for_select(["Atomic", "Branched", "Collection", "Hierarchical", "Linear", "Mixed", "Networked", "Parceled"],general_structure.value),{:include_blank=>true}) %>
			<%= text_field_tag(:general_structure, general_structure.value) %></div>
		</div>
		<div class="row-fluid">
			<div class="span3">Aggregation level: </div>
			<% general_aggregation_level = obtain_general_aggregation_level(@learning_object,@metadata_general) %>
			<%= hidden_field_tag(:general_aggregation_level_id, general_aggregation_level.id)%>
			<div class="span9"><%#= select_tag(:general_aggregation_level, options_for_select(["1", "2","3","4"],general_aggregation_level.value),{:include_blank=>true}) %>
			<%= text_field_tag(:general_aggregation_level, general_aggregation_level.value) %></div>
		</div>
	</div>
	<div class="span4">
		<div class="row-fluid">
			<div class="span3">Description: </div>
			<% general_description = obtain_general_description(@learning_object,@metadata_general) %>
			<%= hidden_field_tag(:general_description_id, general_description.id)%>
			<div class="span8"><%= text_area_tag(:general_description, general_description.value, {:id=>"input-description", maxlength:50}) %></div>
		</div>	
	</div>
	
</div>
<div class="row-fluid metadata-body">
	<div class="span11">
		<div class="row-fluid">
			<div class="span3">Keywords (separate with commas): </div>
			<% general_keywords = obtain_general_keywords(@learning_object,@metadata_general) %>
			<%= hidden_field_tag(:general_keywords_id, general_keywords.id)%>
			<div class="span9"><%= text_field_tag(:general_keywords, general_keywords.value, {:id=>"input-keywords"}) %></div>
		</div>
	</div>
</div>