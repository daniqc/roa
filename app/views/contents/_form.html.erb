<%= form_for [@course, @content], :as => :content do |f| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :type %>
  <%= f.hidden_field :course_id %>
  <%= f.hidden_field :parent_id %>

  <div class="row-fluid">
    <div class="span12">
      <div class="row-fluid">
        <div class="span4">
          <div class="row-fuid">
            <div class="span3"><%= f.label :number %></div>
            <div class="span7"><%= f.number_field :number%></div>
          </div>
          <div class="row-fluid">
            <div class="span3"><%= f.label :name %></div>
            <div class="span7"><%= f.text_field :name %></div>
          </div>
          <div class="row-fuid">
            <div class="span3"><%= f.label :hours %></div>
            <div class="span7"><%= f.text_field :hours %></div>
          </div>
          <div class="row-fuid">
            <div class="span3"><%= f.label :in_hours %></div>
            <div class="span7"><%= f.text_field :in_hours %></div>
          </div>
          <div class="row-fuid">
            <div class="span3"><%= f.label :out_hours %></div>
            <div class="span7"><%= f.text_field :out_hours %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit :class => "btn btn-success"%>
  </div>
<% end %>
