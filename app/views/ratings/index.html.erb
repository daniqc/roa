<div class="div-fluid">
  <div class="page-header">
    <p style="color: gray;text-align: right;">Te encuentras en: <%= link_to @learning_object.name, @learning_object %> &raquo; Revisa el rating de este material </p>
      <h2>Listado de evaluaciones de <%= @learning_object.name %><small></small></h2>
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span10"></div>
          <div class="span2">
            <%= link_to "Volver al material", @learning_object, {:class=> "btn btn-small btn-success"} %>
          </div>
        </div>
      </div>
  </div>
  
  <div class="container-fluid material-table">
    <div class="row-fluid">
      <div class="span1">
      </div>
      <div class="span2">
        <p>
          Evaluación
        </p>
      </div>
      <div class="span9">
        <p class="align-center">
          Observación
        </p>
      </div>
    </div>
    <% @ratings.each do |rating| %>
      <div class="row-fluid rating-row <%= cycle('anything','odd') %>">
        <div class="span1">
        </div>
        <div class="span2">
          <div>
            <% if !rating.person.nil? %>
              <strong><%= rating.person.name %></strong>
            <% else %>
              <strong>Soy el autor anonimo</strong>
            <% end %>
          </div>
          <%= render :partial => 'rating_star_readOnly', :locals => {:rating => rating } %>
        </div>
        <div class="span9">
          <%= rating.comment %>
        </div>
      </div>
    <% end %>
  </div>
</div>